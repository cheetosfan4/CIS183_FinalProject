<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6B4"
    tools:context=".ViewColorActivity">

    <Button
        android:id="@+id/btn_v_viewColor_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#966400"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_viewColor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/view_v_viewColor_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_v_viewColor_bg"
        android:layout_width="304dp"
        android:layout_height="304dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view_v_viewColor_color"
        app:layout_constraintEnd_toEndOf="@+id/view_v_viewColor_color"
        app:layout_constraintStart_toStartOf="@+id/view_v_viewColor_color"
        app:layout_constraintTop_toTopOf="@+id/view_v_viewColor_color" />

    <View
        android:id="@+id/view_v_viewColor_color"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_viewColor_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hex"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_v_viewColor_color" />

    <TextView
        android:id="@+id/tv_v_viewColor_paletteSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Palette:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/spn_v_viewColor_paletteSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spn_v_viewColor_paletteSave" />

    <Spinner
        android:id="@+id/spn_v_viewColor_paletteSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_viewColor_paletteSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_v_viewColor_paletteSave" />

    <Button
        android:id="@+id/btn_v_viewColor_paletteSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#966400"
        android:text="Save to Selected Palette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_viewColor_newPaletteSave"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_viewColor_newPaletteSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#966400"
        android:text="Save to New Palette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_viewColor_paletteSave" />

</androidx.constraintlayout.widget.ConstraintLayout>